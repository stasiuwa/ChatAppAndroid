<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.Settings.TechFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="DZIAŁ USTAWIEN 1"
            android:textSize="19sp"
            android:layout_marginStart="10dp"
            />
        <LinearLayout
            android:id="@+id/techSetting1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/section1">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 1"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techSetting2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/techSetting1">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 2"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techSetting3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/techSetting2">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 3"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techSetting4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/techSetting3">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 4"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/techSetting4"
            android:text="DZIAŁ USTAWIEN 2"
            android:textSize="19sp"
            android:layout_marginStart="10dp"
            />
        <LinearLayout
            android:id="@+id/techSetting5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/section2">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 5"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techSetting6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/techSetting5">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 6"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/techSetting7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/techSetting6">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ustawienie 7"
                android:textSize="15sp"
                />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>